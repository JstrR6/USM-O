        if (container) {
            container.innerHTML = `<p class="text-red-500">Error loading rejected placements: ${error.message}</p>`;
        }
    }
}

async function handleOfficerReview(id, action) {
    try {
        switch(action) {
            case 'veto':
                // Veto directly places in original division
                const vetoNotes = prompt('Optional notes for vetoing the rejection:');
                await submitOfficerReview(id, 'veto', vetoNotes);
                break;
                
            case 'accept_rejection':
                // Open new division selection modal
                openNewDivisionModal(id);
                break;
                
            case 'final_reject':
                const notes = prompt('Please provide final rejection notes:');
                if (!notes) return;
                await submitOfficerReview(id, 'final_reject', notes);
                break;
        }
    } catch (error) {
        console.error('Error:', error);
        alert('Error processing review');
    }
}

async function submitOfficerReview(id, action, notes = '', newDivisionId = null) {
    try {
        const response = await fetch(`/api/recruitment/${id}/review`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ 
                action, 
                notes,
                newDivisionId 
            })
        });

        const data = await response.json();
        if (data.success) {
            loadRejectedPlacements();
            if (action === 'accept_rejection') {
                closeNewDivisionModal();
            }
            
            // Provide specific feedback based on action
            switch(action) {
                case 'veto':
                    alert('Recruitment vetoed. Recruit placed in original division.');
                    break;
                case 'accept_rejection':
                    alert('Recruitment accepted. Recruit placed in new division.');
                    break;
                case 'final_reject':
                    alert('Recruitment fully rejected. Recruit not placed in any division.');
                    break;
            }
        } else {
            alert(data.error || 'Error processing review');
        }
    } catch (error) {
        console.error('Error:', error);
        alert('Error processing review');
    }
}

function openNewDivisionModal(recruitmentId) {
    currentRecruitmentId = recruitmentId;
    const modal = document.getElementById('newDivisionModal');
    modal.classList.remove('hidden');
    
    // Load divisions
    fetch('/api/divisions')
        .then(response => response.json())
        .then(data => {
            const select = document.getElementById('newDivisionSelect');
            select.innerHTML = '<option value="">Select Division</option>';
            data.divisions.forEach(division => {
                select.innerHTML += `
                    <option value="${division._id}">${division.name}</option>
                `;
            });
        })
        .catch(error => console.error('Error loading divisions:', error));
}

function closeNewDivisionModal() {
    document.getElementById('newDivisionModal').classList.add('hidden');
    currentRecruitmentId = null;
}

async function confirmNewDivision() {
    const newDivisionId = document.getElementById('newDivisionSelect').value;
    if (!newDivisionId) {
        alert('Please select a division');
        return;
    }

    const notes = prompt('Please provide any notes about this placement:');
    await submitOfficerReview(currentRecruitmentId, 'accept_rejection', notes, newDivisionId);
}
