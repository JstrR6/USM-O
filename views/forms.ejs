async function loadRejectedPlacements() {
    try {
        console.log('Fetching rejected placements...'); // Debug log
        const response = await fetch('/api/recruitment/rejected');
        const data = await response.json();
        
        console.log('Received data:', data); // Debug log

        const container = document.getElementById('rejectedPlacementsList');
        if (!container) {
            console.error('rejectedPlacementsList element not found'); // Debug log
