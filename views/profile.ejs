<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile - <%= user.username %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f4f4f4;
        }

        .profile-container {
            max-width: 900px;
            margin: 30px auto;
            background-color: white;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .profile-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .profile-section {
            margin-bottom: 25px;
        }

        .profile-section h2 {
            border-bottom: 2px solid #ddd;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

        .profile-info p {
            margin-bottom: 8px;
        }

        .table thead th {
            background-color: #e9ecef;
        }

        .table-responsive {
            overflow-x: auto;
        }
    </style>
</head>
<body>
    <div class="container profile-container">
        <div class="profile-header">
            <h1><%= user.fullName || user.username %></h1>
            <p class="lead">Rank: <%= user.highestRole %></p>
        </div>

        <div class="profile-section profile-info">
            <h2>User Information</h2>
            <p><strong>Username:</strong> <%= user.username %></p>
            <p><strong>XP:</strong> <%= user.xp %></p>
            <% if (user.discordId) { %>
                <p><strong>Discord ID:</strong> <%= user.discordId %></p>
            <% } %>
            <% if (user.robloxId) { %>
                <p><strong>Roblox ID:</strong> <%= user.robloxId %></p>
            <% } %>

            <% if (divisions && divisions.length > 0) { %>
                <p><strong>Divisions:</strong>
                    <% divisions.forEach(division => { %>
                        <%= division.name %><% if (divisions.indexOf(division) !== divisions.length - 1) { %>, <% } %>
                    <% }); %>
                </p>
            <% } else { %>
                <p><strong>Divisions:</strong> Not assigned to any divisions.</p>
            <% } %>
        </div>

        <div class="profile-section">
            <h2>Performance Reports</h2>
            <% if (performanceReports && performanceReports.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Evaluator</th>
                                <th>Score</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% performanceReports.forEach(report => { %>
                                <tr>
                                    <td><%= report.evaluationDate.toLocaleDateString() %></td>
                                    <td><%= report.evaluator.username %></td>
                                    <td><%= report.score %></td>
                                    <td><%= report.status %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <p>No performance reports available.</p>
            <% } %>
        </div>

        <div class="profile-section">
            <h2>Disciplinary Actions</h2>
            <% if (disciplinaryActions && disciplinaryActions.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Date Issued</th>
                                <th>Issued By</th>
                                <th>Reason</th>
                                <th>Grade</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% disciplinaryActions.forEach(action => { %>
                                <tr>
                                    <td><%= action.dateIssued.toLocaleDateString() %></td>
                                    <td><%= action.issuedBy.username %></td>
                                    <td><%= action.reason %></td>
                                    <td><%= action.grade %></td>
                                    <td><%= action.status %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <p>No disciplinary actions on record.</p>
            <% } %>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>